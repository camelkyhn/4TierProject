@model List<_4TierProject.Common.Entities.Product>
@{
    ViewBag.Title = "ASP.NET MVC Product Store";
}

@if (ViewBag.UserName != null)
{
    <h4>Hi @ViewBag.UserName</h4>
}
<div id="promotion">
</div>

<h3><em>Fresh</em> off the grill</h3>

<ul id="product-list">
    @foreach (var product in Model)
    {
        <li>
            <a href="@Url.Action("Details", "Store",
                new { id = product.Id })">

                <img alt="@product.ProductName" src="@product.ImageURL" />
                <span>@product.ProductName</span>
            </a>
        </li>
    }
</ul>